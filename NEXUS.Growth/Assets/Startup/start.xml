<?xml version="1.0" encoding="utf-8"?>
<start-options xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <start-option>
    <process>epitaxial</process>
    <potential>tight-binding</potential>
    <element>TB_Pt</element>
    <atom-count>1000</atom-count>
    <time-steps>100000</time-steps>
    <temperature-initial>400</temperature-initial>
    <temperature-2-enable>false</temperature-2-enable>
    <temperature-2>0</temperature-2>
    <temperature-2-percent>0</temperature-2-percent>
    <temperature-end>4000</temperature-end>
    <cycles>1</cycles>
    <epitaxy>
      <diameter>25</diameter>
      <energy>0.5</energy>
      <delay>10</delay>
    </epitaxy>
    <evolution>
      <initial-density>0</initial-density>
      <initial-configuration>cube</initial-configuration>
      <initial-position>centered</initial-position>
    </evolution>
    <substrate>
      <type>discrete</type>
      <element>TB_Pt</element>
      <agile-height>0</agile-height>
      <agile-temperature>600</agile-temperature>
      <face>100</face>
    </substrate>
    <box>
      <system>closed</system>
      <motile>false</motile>
      <geometry>cube</geometry>
      <width>150</width>
      <depth>150</depth>
      <height>65</height>
      <radius>0</radius>
    </box>
    <system>
      <cnMax>1</cnMax>
      <time-verlet>1E-15</time-verlet>
      <save-velocities>true</save-velocities>
      <angular-momentum-control>false</angular-momentum-control>
      <dump-frequency>100</dump-frequency>
      <dump-summary-frequency>100</dump-summary-frequency>
      <output-method>standard</output-method>
      <thermostate-maxwell>true</thermostate-maxwell>
      <thermostate-maxwell-threshold>0.01</thermostate-maxwell-threshold>
      <thermostate-berendsen>true</thermostate-berendsen>
      <thermostate-berendsen-parameter>5</thermostate-berendsen-parameter>
      <thermostate-3d-mode>false</thermostate-3d-mode>
    </system>
  </start-option>
</start-options>