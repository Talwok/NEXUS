<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="NEXUS.Starter.Views.MainWindow"
        MinWidth="600"
        MinHeight="400"
        Icon="../Assets/NEXUS.ico"
        Title="NEXUS">
    <DockPanel Margin="20">
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <Border DockPanel.Dock="Left" CornerRadius="10" ClipToBounds="True">
                <Image Height="60" Source="../Assets/NEXUS.ico"/>
            </Border>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="8" >
                <Button VerticalAlignment="Top">
                    <avalonia:MaterialIcon Kind="Github"/>
                </Button>
                <Button VerticalAlignment="Top">
                    <avalonia:MaterialIcon Kind="Web"/>
                </Button>
            </StackPanel>
            <TextBlock DockPanel.Dock="Left" Foreground="{StaticResource SystemAccentColor}" FontSize="40" Margin="10 0" FontWeight="Bold" Text="NEXUS"/>
            <Border Background="{StaticResource SystemAccentColor}" 
                    DockPanel.Dock="Left" 
                    VerticalAlignment="Center"
                    CornerRadius="10">
                <TextBlock Margin="8 6"  FontWeight="Bold" Text="1.0.0"/>
            </Border>
            
        </DockPanel>
        <DockPanel Margin="0 10 0 0" LastChildFill="False" DockPanel.Dock="Bottom">
            <StackPanel DockPanel.Dock="Right" 
                        Orientation="Horizontal" Spacing="8">
                <Button>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Обновить"/>
                        <avalonia:MaterialIcon Kind="Sync"/>
                    </StackPanel>
                </Button>
                <Button>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Запустить"/>
                        <avalonia:MaterialIcon Kind="PlayBoxOutline" Foreground="Green"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            <Button DockPanel.Dock="Left">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Настройки"/>
                    <avalonia:MaterialIcon Kind="SettingsOutline"/>
                </StackPanel>
            </Button>
        </DockPanel>
        <ListBox>
          <DockPanel Margin="0 10">
              <Border CornerRadius="10" ClipToBounds="True">
                <Image Height="50" Source="../Assets/FractalSurface.ico"/>
              </Border>
              <Border Background="{StaticResource SystemAccentColor}" 
                      DockPanel.Dock="Right" 
                      VerticalAlignment="Top"
                      CornerRadius="10">
                  <TextBlock Margin="8 6"  FontWeight="Bold" Text="1.0.0"/>
              </Border>
              <StackPanel VerticalAlignment="Center" Margin="20 0" Spacing="8">
                  <TextBlock FontSize="14" FontWeight="Bold" Foreground="{StaticResource SystemAccentColor}" Text="Fractal Surface"/>
                  <TextBlock FontSize="12" FontWeight="Bold" Text="Исследование фрактальной размерности изображений"/>
              </StackPanel>

          </DockPanel>
          <DockPanel Margin="0 10">
              <Border DockPanel.Dock="Left" CornerRadius="10" ClipToBounds="True">
                <Image Height="50" Source="../Assets/GrowthSimulation.ico"/>
              </Border>
              <Border Background="{StaticResource SystemAccentColor}" 
                      DockPanel.Dock="Right" 
                      VerticalAlignment="Top"
                      CornerRadius="10">
                  <TextBlock Margin="8 6" FontWeight="Bold" Text="1.0.0"/>
              </Border>
              <StackPanel VerticalAlignment="Center" Margin="20 0" Spacing="8">
                  <TextBlock FontSize="14" Foreground="{StaticResource SystemAccentColor}" FontWeight="Bold" Text="Growth Simulation"/>
                  <TextBlock FontSize="12" FontWeight="Bold" Text="Симуляция эпитаксиального и эволюционного роста"/>
              </StackPanel>
          </DockPanel>
      </ListBox>  
        
    </DockPanel>
</Window>
