<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="NEXUS.Starter.MainWindow"
        MinWidth="600"
        MinHeight="400"
        Icon="/Assets/NEXUS.ico"
        Title="NEXUS">
    <DockPanel Margin="20">
        <DockPanel DockPanel.Dock="Top" Margin="40" >
            <Border CornerRadius="10" ClipToBounds="True">
                <Image Height="100" Source="Assets/NEXUS.ico"/>
            </Border>
            <Panel Background="#2D2D2D" Margin="10 0">
                <TextBlock Foreground="White" FontSize="70" Margin="10 0" FontWeight="Bold" Text="NEXUS"/>
            </Panel>

        </DockPanel>
        <DockPanel LastChildFill="False" DockPanel.Dock="Bottom">
            <Button DockPanel.Dock="Right">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Запустить"/>
                    <avalonia:MaterialIcon Kind="PlayBoxOutline" Foreground="Green"/>
                </StackPanel>
            </Button>
        </DockPanel>
        <ListBox>
          <DockPanel Margin="0 10">
              <Border CornerRadius="10" ClipToBounds="True">
                <Image Height="60" Source="Assets/FractalSurface.ico"/>
              </Border>
              <StackPanel VerticalAlignment="Center" Margin="20 0" Spacing="8">
                  <TextBlock FontSize="18" FontWeight="Bold" Text="Fractal Surface"/>
                  <TextBlock FontWeight="Bold" Text="Исследование фрактальной размерности изображений"/>
              </StackPanel>
          </DockPanel>
          <DockPanel Margin="0 10">
              <Border CornerRadius="10" ClipToBounds="True">
                <Image Height="60" Source="Assets/GrowthSimulation.ico"/>
              </Border>
              <StackPanel VerticalAlignment="Center" Margin="20 0" Spacing="8">
                  <TextBlock FontSize="18" FontWeight="Bold" Text="Growth Simulation"/>
                  <TextBlock FontWeight="Bold" Text="Симуляция эпитаксиального и эволюционного роста"/>
              </StackPanel>
          </DockPanel>
      </ListBox>  
        
    </DockPanel>
</Window>
